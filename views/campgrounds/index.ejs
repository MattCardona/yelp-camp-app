<% include ../partials/header %>

    <header class="jumbotron">
      <div class="container">
        <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all over the world.</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/campgrounds/new">Create new campground</a>
        </p>
      </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">

        <%if(noMatch !== undefined){%>
          <div class="col-sm-12 col-md-12">
            <h3 class="text-center"><%= noMatch %></h3>
             <p>
              <form action="/campgrounds" method="GET" class="form-inline">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Campground search..." class="form-control">
                  <input type="submit" value="Search" class="btn btn-default">
                </div>
              </form>
            </p>
          </div>
        <%}%>


      <% campsites.forEach(function(camp) { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= camp.image%>">
            <div class="caption">
              <h4><%= camp.name %></h4>
            </div>
            <p>
              <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
      <% }) %>

    </div>

<% include ../partials/footer %>